<div class="container">
    <h3 class="text-center">Contact Us</h3>
    
    <%= form_for "/contacts" do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        
        <%= f.label :Email %>
        <%= f.text_field :Email %>
        
        <%= f.label :Comment %>
        <%= f.text_area :Comment %>
        
        <%= f.submit 'Submit' %>
        
    <% end %>
</div>