<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="text center">
        <% if params[:plan] == '2' %>
          <h1>Pro account</h1>
          <p>Sign up for a pro account for 10$/month and access community and contact info.</p>
        <% else %>
          <h1>Basic account</h1>
          <p>Sign up for a basic account and join the community.</p>
        <% end %>
      </div>
      
      <div class="well">
        <h2>Sign up</h2>
        <% if params[:plan] == '2' %>
            <%= render "pro_form" %>
        <% else %>
            <%= render "basic_form" %>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
      
    </div>
  </div>
</div>